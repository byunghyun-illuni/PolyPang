{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸŽ® Client (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/client",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/src/*"
      }
    },
    {
      "name": "ðŸ”§ Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/server/.env"
    },
    {
      "name": "ðŸš€ Full Stack (Client + Server)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/server",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "Server is running on port ([0-9]+)",
        "uriFormat": "http://localhost:5173",
        "action": "debugWithChrome"
      },
      "preLaunchTask": "Start Client Dev Server"
    }
  ],
  "compounds": [
    {
      "name": "ðŸŽ¯ Client + Server (Parallel)",
      "configurations": ["ðŸŽ® Client (Chrome)", "ðŸ”§ Server"],
      "presentation": {
        "hidden": false,
        "group": "PolyPang",
        "order": 1
      },
      "stopAll": true
    }
  ]
}
